{
  "version": 3,
  "builds": [
    {
      "src": "server/**/*.ts",
      "use": "@vercel/node",
      "config": { "outputFile": "dist/index.cjs" }
    },
    {
      "src": "client/dist/public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "dist/index.cjs" },
    { "src": "/(.*)", "dest": "client/dist/public/$1" }
  ]
}
